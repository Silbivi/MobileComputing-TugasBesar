<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    app:rowCount="2"
    tools:context=".MainActivity">

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#D59A70"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/light1"
                android:id="@+id/c1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c1"
                android:layout_centerHorizontal="true"
                android:text="Original Cookies\nRp.15000"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/dark2"
                android:id="@+id/c2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="#090909"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c2"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Dark Brown Cookies\nRp.15000"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/green"
                android:id="@+id/c3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Green Tea Cookies\nRp.15000"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#D59A70"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/red2"
                android:id="@+id/c4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c4"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Red Velvet Cookies\nRp.15000"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#D59A70"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/mix"
                android:id="@+id/c5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c5"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Mix Choco Cookies\nRp.15000"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/mars"
                android:id="@+id/c6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c6"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:gravity="center"
                android:text="Marsmallow Cookies\nRp.15000"/>
        </RelativeLayout>
    </FrameLayout>

</androidx.gridlayout.widget.GridLayout>